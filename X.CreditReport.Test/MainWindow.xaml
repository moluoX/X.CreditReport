<Window x:Class="X.CreditReport.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:X.CreditReport.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TextBox x:Name="txtContent" HorizontalAlignment="Left" Height="495" Margin="10,65,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="772" PreviewDragOver="txtContent_PreviewDragOver" PreviewDrop="txtContent_PreviewDrop"/>
        <Button x:Name="btnSelect" Content="选择" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="btnSelect_Click"/>
        <Button x:Name="btnAnalyze" Content="解析" HorizontalAlignment="Left" Margin="90,38,0,0" VerticalAlignment="Top" Width="75" Click="btnAnalyze_Click"/>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="90,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="692"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,15,0,0" TextWrapping="NoWrap" Text="pdf文件" VerticalAlignment="Top" Width="75" TextAlignment="Center" />
    </Grid>
</Window>
